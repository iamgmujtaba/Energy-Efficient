            <TextView
                android:id="@+id/encription_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DevicesName"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/encrypt_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/encription_name" />

            <!--
            <TextView
                android:id="@+id/tvorig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/encription_name" />

            <TextView
                android:id="@+id/tvencoded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
